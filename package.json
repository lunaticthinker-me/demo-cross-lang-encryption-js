{
  "name": "demo-cross-lang-encryption-js",
  "version": "1.0.0",
  "description": "Demo Using Cross Lang Encryption :: JavaScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "// build": "rollup -c --environment NODE_ENV:production",
    "clean": "rimraf coverage dist",
    "git-hook:pre-commit": "npm run prettier:write && npm run lint:write && npm run jscpd && npm run test",
    "inspector": "jsinspector server --port 9543",
    "jscpd": "jscpd ./src --blame --format typescript",
    "jscpd:html": "npm run jscpd -- --reporters html",
    "lint": "eslint ./{src,test}/**/*.ts",
    "lint:watch": "nodemon --exec 'npm run lint'",
    "lint:write": "npm run lint -- --fix",
    "prebuild": "npm run clean",
    "prerelease": "npm run build",
    "pretest": "npm run clean",
    "prettier": "prettier ./{src,test}/**/*.ts",
    "prettier:check": "npm run prettier -- --list-different",
    "prettier:write": "npm run prettier -- --write",
    "release": "release-it --ci --no-npm.publish",
    "prestart": "npm run test",
    "start": "ts-node ./src/index.ts",
    "test": "npm run test:single -- 'test/**/*.test.ts'",
    "test:junit": "npm run test -- --reporter mocha-junit-reporter --reporter-options mochaFile=.junit.xml",
    "test:single": "nyc --reporter=html --reporter=lcov --reporter=text --extension .ts mocha --forbid-only",
    "test:watch": "nodemon --exec 'npm run test'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lunaticthinker-me/demo-cross-lang-encryption-js.git"
  },
  "author": "Dragos Cirjan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lunaticthinker-me/demo-cross-lang-encryption-js/issues"
  },
  "homepage": "https://github.com/lunaticthinker-me/demo-cross-lang-encryption-js#readme",
  "devDependencies": {
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/chai": "^4.2.11",
    "@types/crypto-js": "^3.1.47",
    "@types/crypto-random-string": "^2.0.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.19",
    "@types/node-forge": "^0.9.3",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "chai": "^4.2.0",
    "crypto-random-string": "^3.3.0",
    "eslint": "^6.8.0",
    "eslint-plugin-mocha": "^6.3.0",
    "jscpd": "^2.0.16",
    "jscpd-badge-reporter": "^1.1.3",
    "jsinspector": "^2.0.4",
    "mocha": "^7.2.0",
    "mocha-junit-reporter": "^1.23.3",
    "nodemon": "^2.0.3",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "release-it": "^13.7.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.10.9",
    "rollup-plugin-dts": "^1.4.7",
    "rollup-plugin-typescript2": "^0.27.1",
    "semver": "^7.3.8",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "npm run git-hook:pre-commit && git add ."
  }
}
